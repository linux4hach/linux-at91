/ {
        ahb {
                apb {
                        hlcdc: hlcdc@f8038000 {
                                hlcdc-display-controller {
                                        pinctrl-names = "default";
                                        pinctrl-0 = <&pinctrl_lcd_base &pinctrl_lcd_rgb565>;

                                        port@0 {
                                                hlcdc_panel_output: endpoint@0 {
                                                        reg = <0>;
                                                        remote-endpoint = <&panel_input>;
                                                };
                                        };
                                };
                        };

                        adc0: adc@f804c000 {
        pinctrl-names="default";
        pinctrl-0=<&pinctrl_adc0_ad6>;
                        };

                        pinctrl@fffff400 {
                                board {
                                        pinctrl_qt1070_irq: qt1070_irq {
                                                atmel,pins =
                                                        <AT91_PIOA 7 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH>;
                                        };
                                };
                        };

pwm0: pwm@f8034000 {
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_pwm0_pwm0_0 &pinctrl_pwm0_pwm1_0 &pinctrl_pwm0_pwm2_0 &pinctrl_pwm0_pwm3_0>;
                };
        };
  };

        backlight: backlight {
                compatible = "pwm-backlight";
                pwms = <&hlcdc_pwm 0 50000 0>;
                brightness-levels = <0 4 8 16 32 64 128 255>;
                default-brightness-level = <6>;
                power-supply = <&bl_reg>;
                status = "disabled";
        };

        bl_reg: backlight_regulator {
                compatible = "regulator-fixed";
                regulator-name = "backlight-power-supply";
                regulator-min-microvolt = <5000000>;
                regulator-max-microvolt = <5000000>;
                status = "disabled";
        };
/*
        panel: panel {
                compatible = "newhaven,nhd-4p3-480272ef-atx1", "simple-panel";
                backlight = <&backlight>;
                power-supply = <&panel_reg>;
                #address-cells = <1>;
                #size-cells = <0>;
                status = "disabled";
*/




        panel: panel {
                compatible = "newhaven,nhd_70_800480ef_asxv", "simple-panel";
                backlight = <&backlight>;
                power-supply = <&panel_reg>;
                #address-cells = <1>;
                #size-cells = <0>;
                status = "disabled";


/*
        panel: panel {
                compatible = "dto,DT050TFT_800_480", "simple-panel";
                backlight = <&backlight>;
                power-supply = <&panel_reg>;
                #address-cells = <1>;
                #size-cells = <0>;
                status = "disabled";
*/

                port@0 {
                        #address-cells = <1>;
                        #size-cells = <0>;

                        panel_input: endpoint@0 {
                                reg = <0>;
                                remote-endpoint = <&hlcdc_panel_output>;
                        };
                };
        };

        panel_reg: panel_regulator {
                compatible = "regulator-fixed";
                regulator-name = "panel-power-supply";
                regulator-min-microvolt = <3300000>;
                regulator-max-microvolt = <3300000>;
                status = "disabled";
        };
};
